<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/logo_okane"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/okane_logo" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/logo_okane"
        android:layout_centerInParent="true"
        android:layout_marginTop="45dp"
        android:background="@drawable/text_image"
        android:drawableLeft="@drawable/ic_person_dark"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/et_password"
        android:hint="Password"
        android:drawableLeft="@drawable/ic_lock_dark"
        android:background="@drawable/text_image"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/et_email"
        android:layout_alignStart="@+id/et_email"
        android:layout_below="@+id/et_email"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="316dp"
        android:layout_height="44dp"
        android:layout_below="@+id/et_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_black_img"
        android:text="Log In"
        android:textColor="#ffff"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/tv_forgotPW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="#888"
        android:text="Forgot your password?" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="316dp"
        android:layout_height="44dp"
        android:background="@drawable/button_black_img"
        android:textSize="30sp"
        android:textColor="#ffff"
        android:layout_below="@+id/tv_forgotPW"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Sign Up" />


</RelativeLayout>